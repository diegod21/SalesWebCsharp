@model WebApplication1.Models.ViewModels.SalesRecordFormViewModel
@using WebApplication1.Models.Enums

@{
    ViewData["Title"] = "New Sale";
}

<h2>Sale</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Sale.Date">Data</label>
        <input asp-for="Sale.Date" class="form-control" type="date" required />
    </div>
    <div class="form-group">
        <label asp-for="Sale.Amount">Valor</label>
        <input asp-for="Sale.Amount" class="form-control" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label asp-for="Sale.Status">Status</label>
        <select asp-for="Sale.Status" class="form-control" asp-items="Html.GetEnumSelectList<SalesStatus>()" required></select>
    </div>
    <div class="form-group">
        <label>Seller</label>
        <label asp-for="Sale.SellerId" class="control-label"></label>
        <select asp-for="Sale.SellerId" asp-items="@(new SelectList(Model.Sellers,"Id",
                "Name"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
